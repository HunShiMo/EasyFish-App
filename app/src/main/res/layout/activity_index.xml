<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="#ffffff"
                >
                <TextView
                    android:id="@+id/tv_title"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="轻松钓鱼"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    />
            </LinearLayout>
            <ViewFlipper
                android:visibility="visible"
                android:id="@+id/VF_Main"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="13"
                >
                <include layout="@layout/fragment_newindex" />
                <include layout="@layout/fragment_hisdata" />
                <include layout="@layout/fragment_person" />
            </ViewFlipper>
            <RelativeLayout
                android:elevation="5dp"
                android:translationZ="5dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <FrameLayout
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RadioGroup
                            android:paddingTop="5dp"
                            android:gravity="center"
                            android:id="@+id/RG_Main_Img"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:checkedButton="@id/RBtn_Main_Index"
                            android:orientation="horizontal"
                            >
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"/>
                            <RadioButton
                                android:id="@+id/RBtn_Main_Index"
                                android:gravity="center"
                                android:button="@null"
                                android:background="@drawable/bg_tab_index"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                />

                            <View
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"/>

                            <RadioButton
                                android:id="@+id/RBtn_Main_Recharge"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_tab_recharge"
                                android:button="@null"
                                android:gravity="center" />
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"/>
                            <RadioButton
                                android:id="@+id/RBtn_Main_Person"
                                android:gravity="center"
                                android:button="@null"
                                android:background="@drawable/bg_tab_person"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"/>
                        </RadioGroup>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <TextView
                                android:layout_gravity="center"
                                android:textSize="10dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="#333333"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="实时数据"/>
                            <TextView
                                android:layout_gravity="center"
                                android:textSize="10dp"
                                android:layout_width="0dp"
                                android:textColor="#333333"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="历史数据"/>
                            <TextView
                                android:layout_gravity="center"
                                android:textSize="10dp"
                                android:textColor="#333333"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="个人信息"/>
                        </LinearLayout>
                    </LinearLayout>
                    <RadioGroup
                        android:checkedButton="@id/RBtn_Main_Tab_0"
                        android:id="@+id/RG_Main_Tab"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RadioButton
                            android:button="@null"
                            android:id="@+id/RBtn_Main_Tab_0"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />
                        <RadioButton
                            android:button="@null"
                            android:id="@+id/RBtn_Main_Tab_2"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />
                        <RadioButton
                            android:button="@null"
                            android:id="@+id/RBtn_Main_Tab_3"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />
                    </RadioGroup>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>